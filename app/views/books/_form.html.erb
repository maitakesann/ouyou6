<%= form_with model:book,local:true do |f| %>
<%= render 'layouts/errors', obj: @book %>

  <div class="container py-3">
    <div>
    <%= f.label :title %>
    </div>
    <%= f.text_field :title %>
  </div>
  <div class="container">
    <%= f.label :opinion %>
    <%= f.text_area :body %>
  </div>
  <div class="container">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
